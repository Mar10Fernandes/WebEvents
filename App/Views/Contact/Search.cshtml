@model IEnumerable<ClassLibrary.Contact>

@{
    ViewData["Title"] = "Search";
}

<h2>Search</h2>
<form asp-controller="Contact" asp-action="Search">
    <p>
        Name: <input type="text" name="SearchString">
        <input type="hidden" name="id" value="1"/>
        <input type="submit" value="SearchName" />
    </p>
</form>

<form asp-controller="Contact" asp-action="Search">
    <p>
        Email: <input type="text" name="SearchString">
        <input type="hidden" name="id" value="2" />
        <input type="submit" value="SearchEmail" />
    </p>
</form>

<form asp-controller="Contact" asp-action="Search">
    <p>
        Phone: <input type="text" name="SearchString">
        <input type="hidden" name="id" value="3" />
        <input type="submit" value="SearchPhone" />
    </p>
</form>

@if (Model!=null && Model.Count() != 0)
{
    <h2>Search Results</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Gender
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @item.BirthDate
                </td>
                <td>
                    @item.PhoneNumber
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, item) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>

}

